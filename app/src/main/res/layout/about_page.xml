<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView style="@style/about_About.wrapper">

        <LinearLayout style="@style/about_About.wrapper">

            <LinearLayout style="@style/about_sub_wrapper">

                <ImageView
                    android:id="@+id/image"
                    style="@style/about_image" />

                <TextView
                    android:id="@+id/description"
                    style="@style/about_description" />
            </LinearLayout>

            <View style="@style/about_separator" />

            <LinearLayout
                android:id="@+id/about_providers"
                style="@style/about_sub_wrapper"
                android:padding="0dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>